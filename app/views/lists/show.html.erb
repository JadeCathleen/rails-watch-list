<h1><%= @list.name %></h1>

<ul>
<% @list.movies.each do |movie| %>
<% bookmark = Bookmark.find_by(movie_id: movie, list_id: @list) %>
<li><%= image_tag movie.poster_url, alt:"poster of #{movie.title}", width: 200 %>
<%= movie.title %>
<%= movie.overview %>
<%= movie.rating %>
<%= link_to 'delete',
             bookmark_path(bookmark),
              method: :delete,
              data: { confirm: "Are you sure you want to delete #{movie.title} from #{@list.name} ?" } %>
</li>
<% end %>
</ul>

<%= link_to 'Add a movie', new_list_bookmark_path(@list) %>
